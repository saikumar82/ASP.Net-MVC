
@{
    ViewBag.Title = "Index";
}


@* singleLine statements*@
@{ int count = 0;}
@{count += 100;}
@{ Object obj = new object();}


@* Inline statements*@
<h3>The value of count is: @count</h3>
<h4>Object is of type: @obj.GetType()</h4>
<hr />

@*Milti line statements*@
@{
    string Date = DateTime.Now.ToShortDateString();

    string Time = DateTime.Now.ToShortTimeString();

    <text>Current Date is @Date</text>
    <br />
    @:current Time is @Time
    <br />


    }

    <hr />

    @*if statements*@
    @{
        if (count % 2 == 0)
        {
            @count @: is an even number
        }
    }

    <hr />

    @*  for loop *@
    @{string[] Colors = { "red", "green", "blue", "orange" };}
    <h3>List of colors:</h3>

    <ol>
        @for (int i = 0; i < Colors.Length; i++)
        {
            <li>@Colors[i]</li>
        }
    </ol>
    <hr />
    //for each loop
    <h3>List of colors:</h3>
    <ol>
        @{
            foreach (string Color in Colors)
            {
                <li>@Color</li>
            }
        }
    </ol>

